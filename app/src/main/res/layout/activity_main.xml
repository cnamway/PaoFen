<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/myFrame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_marginBottom="@dimen/dip_50"
        android:layout_weight="1"
       />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dip_50"
        android:layout_alignParentBottom="true"
        android:background="@drawable/main_boder_top"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/main_tab_dingdan"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/main_tab_home"
            android:drawablePadding="@dimen/dip_3"
            android:gravity="center"
            android:paddingTop="@dimen/dip_3"
            android:text="订单"
            android:textColor="@drawable/main_fond_selecte"
            android:textSize="@dimen/fond_14sp" />

        <TextView
            android:id="@+id/main_tab_guama"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/main_tab_guama"
            android:drawablePadding="@dimen/dip_3"
            android:gravity="center"
            android:text="挂马"
            android:textColor="@drawable/main_fond_selecte"
            android:textSize="@dimen/fond_14sp" />

        <TextView
            android:id="@+id/main_tab_fankuan"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/main_tab_fankuan"
            android:drawablePadding="@dimen/dip_3"
            android:gravity="center"
            android:text="返款"
            android:textColor="@drawable/main_fond_selecte"
            android:textSize="@dimen/fond_14sp" />

        <TextView
            android:id="@+id/main_tab_tongji"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/main_tab_tongji"
            android:drawablePadding="@dimen/dip_3"
            android:gravity="center"
            android:text="统计"
            android:textColor="@drawable/main_fond_selecte"
            android:textSize="@dimen/fond_14sp" />
    </LinearLayout>
</RelativeLayout>